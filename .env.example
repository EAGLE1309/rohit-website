# Sanity CMS Configuration
# Get these from your Sanity project dashboard: https://www.sanity.io/manage
NEXT_PUBLIC_SANITY_PROJECT_ID=your_project_id_here
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2025-02-06

# Site URL (used for CORS validation in API routes)
NEXT_PUBLIC_SITE_URL=https://rohit.solithix.com

# Cloudflare R2 Configuration
# Get these from Cloudflare Dashboard > R2 > Manage R2 API Tokens
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=rohit-media
R2_PUBLIC_URL=https://media.yourdomain.com

# Sanity API Token (for write operations like migration)
# Get this from Sanity Dashboard > API > Tokens > Add API Token (with Editor permissions)
SANITY_API_TOKEN=your_sanity_api_token_here
